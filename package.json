{
  "name": "cfc-web",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "build:shared": "npm --workspace shared/database run build",
    "build:frontend": "npm --workspace apps/frontend run build",
    "build:backend": "npm run build:shared && npm --workspace apps/backend run build",
    "build": "concurrently \"npm:build:*\"",
    "dev:frontend": "npm --workspace apps/frontend run dev",
    "dev:backend": "npm --workspace apps/backend run start:dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
